{
  "productName": "cheat-sheets-picker",
  "version": "0.1.0",
  "identifier": "fr.aelorius.cheat-sheets-picker",
  "build": {
    "frontendDist": "../ui/"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Cheat Sheets Picker",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src ipc: http://ipc.localhost"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "sheets.json"
    ],

    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
